NODE_ENV=development
APP_NAME=My App
JWT_SECRET=replace-with-strong-random-string
DATABASE_PROVIDER=supabase   # or mongodb or firebase

# Email (required for OTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587               # 465 for SSL
EMAIL_USER=placeholder@example.com
EMAIL_PASS=yourpassword
EMAIL_FROM=no-reply@example.com

# Supabase (if DATABASE_PROVIDER=supabase)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=service_role_key

# MongoDB (if DATABASE_PROVIDER=mongodb)
MONGODB_URI=mongodb+srv://user:pass@cluster0.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=db_name

# Firebase Admin (if DATABASE_PROVIDER=firebase)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n"

# Defense service (Python) - Dual-LLM Prompt Injection Defense
DEFENSE_SERVICE_URL=http://localhost:8000
# Primary model: set PRIMARY_MODEL to a Hugging Face model id (e.g. facebook/Meta-SecAlign-8B)
# to use Hugging Face Inference; otherwise OpenAI (e.g. gpt-4o-mini).
# Hugging Face: get a token at https://huggingface.co/settings/tokens and set HF_TOKEN=
# (or run: huggingface-cli login / login(new_session=False) in Python)
HF_TOKEN=hf_xxxx
PRIMARY_MODEL=facebook/Meta-SecAlign-8B
# Shadow: use local Phi-4 server (run shadow_server) by setting SHADOW_BASE_URL;
# otherwise shadow uses OpenAI (SHADOW_MODEL) and OPENAI_API_KEY is required.
SHADOW_BASE_URL=http://localhost:8001/v1
SHADOW_MODEL=microsoft/phi-4
# Required when not using SHADOW_BASE_URL (or when primary is OpenAI)
OPENAI_API_KEY=sk-proj-xxxx

# ShieldLLM Backend (backend/app) AND Defense Service (defense_service) - vLLM local endpoints
# When PRIMARY_BASE_URL is set, defense service uses vLLM for primary (overrides HF/OpenAI)
PRIMARY_BASE_URL=http://localhost:8000/v1
SHADOW_BASE_URL=http://localhost:8001/v1
PRIMARY_MODEL=facebook/Meta-SecAlign-8B
SHADOW_MODEL=microsoft/phi-4
THRESH_LOW=0.25
THRESH_HIGH=0.55
THRESH_CRITICAL=0.75
INPUT_MAX_CHARS=20000
RATE_LIMIT_CHAT_PER_MIN=30

# Cloudinary
CLOUDINARY_CLOUD_NAME=abcde0abc
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=